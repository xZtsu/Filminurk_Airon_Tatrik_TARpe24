
@model IEnumerable<Filminurk.Models.Movies.MoviesIndexViewModel>
@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary">Lisa film</a>
</div>
<div class="h1">
	Filmid
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Filmi Pealkiri</th>
				<th scope="col">Väljalaskeaeg</th>
				<th scope="col">Hinnang</th>
				<th scope="col">Viimane Linastusaeg</th>
				<th scope="col">Linastus korrud</th>
				<th scope="col">Tööriistad</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@movie.Title</td>
					<td>@movie.FirstPublished</td>
					<td>@movie.CurrentRating</td>
					<td>@movie.LastAiring</td>
					<td>@movie.AirTimes</td>
					<td>
						<a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.ID" class="btn btn-primary">Info</a>
						<a asp-action="Update" asp-controller="Movies" asp-route-id="@movie.ID" class="btn btn-primary">Uuenda</a>
						<a asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.ID" class="btn btn-outline-danger">Eemalda</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>
