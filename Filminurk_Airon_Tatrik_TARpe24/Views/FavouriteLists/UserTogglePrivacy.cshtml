@model Filminurk.Models.FavouriteLists.FavouriteListUserDetailsViewModel

@{
	int rowNumber = 1;
	ViewData["Title"] = "Favourite List Details";
}

<div>
	<h1>USERTOGGLEPRIVACY</h1>
	@if (Model.IsReported == true)
	{
		@: Sinu nimekiri on perses
		@: Oleme seadnud nimekirja privaatseks, kuni admin selle üle vaatab. <br />
	}
	<table>
		<tr>@Model.ListName</tr>
		@* <tr>
			<partial name="_ImageIndex" model="@Model.Image" />
		</tr> *@
	</table>
</div>

<div>
	<form method="post">
		<table class="table">
			@foreach (var movie in Model.ListOfMovies)
			{
				<tr>
					<table class="table" style="border:thick;">
						<tr>
							<td colspan="2">@movie.Title</td>
						</tr>

						<tr>
							<td>(IMAGE HERE)</td>
							<td>
								<table>
									<tr>@movie.Description</tr>
									<tr>@movie.Director</tr>
									<tr>@movie.AirTimes</tr>
									<tr>@movie.CurrentRating</tr>
									<tr>@movie.LastAiring</tr>
								</table>
							</td>
						</tr>
					</table>
				</tr>
			}
		</table>
		<div>

			<input asp-action="UserTogglePrivacy" asp-controller="FavouriteLists" asp-route-id="@Model.FavouriteListID"
				   formethod="get" class="btn btn-warning" value="Muuda nimekiri privaatseks" />
			<a asp-action="Index" asp-controller="FavouriteLists" class="btn btn-light">Tagasi</a>
		</div>
	</form>
</div>